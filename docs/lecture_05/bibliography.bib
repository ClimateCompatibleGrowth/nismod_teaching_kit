doi = {10.1080/14693062.2019.1677549},
issn = {17527457},
journal = {Climate Policy},
keywords = {2030 Agenda for Sustainable Development,Paris Agreement,Sustainable Development Goals (SDGs),institutional interplay,nationally determined contributions (NDCs),thematic policy coherence},
month = {apr},
number = {4},
pages = {430--442},
publisher = {Taylor and Francis Ltd.},
title = {{The 2030 Agenda and the Paris Agreement: voluntary contributions towards thematic policy coherence}},
url = {https://www.tandfonline.com/doi/abs/10.1080/14693062.2019.1677549},
